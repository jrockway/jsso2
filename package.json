{
    "name": "jsso2",
    "version": "0.0.0-pre",
    "license": "Apache-2.0",
    "repository": "https://github.com/jrockway/jsso2",
    "scripts": {
        "all": "concurrently -c blue.dim,magenta.dim,green.dim -k npm:backend npm:envoy npm:dev",
        "all:raw": "concurrently -c blue.dim,magenta.dim,green.dim -k npm:backend:raw npm:envoy npm:dev",
        "generate:go": "go generate ./...",
        "generate:ts": "protoc -Iprotos --js_out=import_style=commonjs:src/protos --grpc-web_out=import_style=typescript,mode=grpcwebtext:src/protos protos/*.proto",
        "generate": "concurrently --raw -m 1 npm:generate:go npm:generate:ts",
        "backend": "env-path -p env.test go run ./cmd/jsso2 2>&1 | jlog -C",
        "backend:raw": "env-path -p env.test go run ./cmd/jsso2",
        "envoy": "envoy -c envoy.yaml -l critical",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public --no-clear",
        "test:go": "go test ./... -race",
        "cover:go": "go test ./... -coverprofile=cover.out -covermode=atomic -coverpkg=github.com/jrockway/jsso2/pkg/... && go tool cover -html cover.out -o coverage.html",
        "test:ts": "jest",
        "cover:ts": "jest --collectCoverage",
        "test": "concurrently --raw -m 1 npm:test:go npm:test:ts",
        "cover": "concurrently --raw -m 1 npm:cover:go npm:cover:ts",
        "tern:new": "tern new -m migrations",
        "lint:svelte": "svelte-check",
        "lint:go": "golangci-lint run",
        "lint": "concurrently --raw -m 1 npm:lint:svelte npm:lint:go",
        "jssoctl": "env-path -p env.test go run ./cmd/jssoctl"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-typescript": "^4.0.0",
        "@tsconfig/svelte": "^1.0.0",
        "@types/google-protobuf": "^3.7.4",
        "@types/jest": "^26.0.15",
        "concurrently": "^5.3.0",
        "env-path": "^1.0.7",
        "jest": "^26.6.1",
        "rollup": "^2.3.4",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "sirv-cli": "^1.0.6",
        "svelte": "^3.0.0",
        "svelte-check": "^1.0.0",
        "svelte-preprocess": "^4.0.0",
        "svelte-spa-router": "^2.2.0",
        "ts-jest": "^26.4.3",
        "tslib": "^2.0.0",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "google-protobuf": "^3.13.0",
        "grpc-web": "^1.2.1"
    }
}
